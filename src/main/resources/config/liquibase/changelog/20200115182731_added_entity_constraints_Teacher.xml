<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Teacher.
    -->
    <changeSet id="20200115182731-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="entrustments_id"
                                 baseTableName="teacher"
                                 constraintName="fk_teacher_entrustments_id"
                                 referencedColumnNames="id"
                                 referencedTableName="entrustment"/>

        <addForeignKeyConstraint baseColumnNames="prefered_courses_id"
                                 baseTableName="teacher"
                                 constraintName="fk_teacher_prefered_courses_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"/>

        <addForeignKeyConstraint baseColumnNames="knowledge_areas_id"
                                 baseTableName="teacher"
                                 constraintName="fk_teacher_knowledge_areas_id"
                                 referencedColumnNames="id"
                                 referencedTableName="knowledge_area"/>

        <addForeignKeyConstraint baseColumnNames="allowed_class_forms_id"
                                 baseTableName="teacher"
                                 constraintName="fk_teacher_allowed_class_forms_id"
                                 referencedColumnNames="id"
                                 referencedTableName="class_form"/>

    </changeSet>
</databaseChangeLog>
