    <!--
        Added the constraints for entity KnowledgeArea.
    -->
    <changeSet id="20200115184528-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="knowledge_area"
                                 constraintName="fk_knowledge_area_course_id"
